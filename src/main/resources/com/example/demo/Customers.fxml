<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CustomersController">
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
            <TableView fx:id="customersTable" prefHeight="314.0" maxWidth="515.0">
                <columns>
                    <TableColumn fx:id="customerIdColumn" text="Customer ID" />
                    <TableColumn fx:id="customerNameColumn" text="Customer Name" />
                    <TableColumn fx:id="emailColumn" text="Email" />
                    <TableColumn fx:id="phoneNumberColumn" text="Phone Number" />
                </columns>
            </TableView>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="customerNameField" promptText="Customer Name" />
                <TextField fx:id="emailField" promptText="Email" />
                <TextField fx:id="phoneNumberField" promptText="Phone Number" />
                <Button fx:id="addButton" text="Add" onAction="#handleAddButton" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteButton" style="-fx-background-color: #FF0000; -fx-text-fill: white;" />
            </HBox>
            <Button fx:id="backButton" text="Back" onAction="#goBackToHome" style="-fx-background-color: #4CAF50; -fx-border-color: #45a049; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-font-size: 14px;" />
        </VBox>
    </center>
</BorderPane>
